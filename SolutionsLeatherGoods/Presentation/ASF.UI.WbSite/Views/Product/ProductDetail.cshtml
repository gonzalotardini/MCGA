@model ASF.Data.DbContext.Product

@{
    ViewBag.Title = "ProductDetail";
}
<style>
   
</style>
<div class="container center-block">
    <div class="row" id="content">
        <div class="col-md-6 col-md-offset-3">
            <div class="thumbnail">
                <img src="" alt="" class="img-responsive">
                <div class="caption">
                    <h4 class="pull-right">$700.99</h4>
                    <h4>@Model.Title</h4>
                    <img src="@Url.Action("Images", "Product", new { id = Model.Id })" width="400" height="400" />
                    <p>@Model.Description</p>
                </div>
                <div class="ratings">
                    <p>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        (15 reviews)
                    </p>
                </div>
                <div class="space-ten"></div>
                <div class="btn-ground text-center">
                    <button type="button" class="btn btn-primary"><i class="fa fa-shopping-cart"></i> Add To Cart</button>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#product_view"><i class="fa fa-search"></i> Quick View</button>
                </div>
                <div class="space-ten"></div>
            </div>
        </div>
    </div>
</div>

